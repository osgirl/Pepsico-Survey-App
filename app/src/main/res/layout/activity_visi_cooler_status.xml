<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="limited.it.planet.visicoolertracking.activities.VISICoolerStatus">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_visi_color_status"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

            <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--&gt;-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="VISI COOLER STATUS"-->
                    <!--android:textSize="25dp"-->

                    <!--/>-->

            <!--</LinearLayout>-->

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/txv_cooler_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooler Active:"
                        android:layout_marginLeft="20dp"
                        android:textSize="17dp"
                        android:textColor="@color/cell_text_color"
                        />
                    <RadioGroup
                        android:id="@+id/radio_group_cooler_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="30dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_radio_col_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes" />

                        <RadioButton
                            android:id="@+id/btn_radio_col_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />


                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="05dp"
                android:background="#6199CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/txv_light_working"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Light Working:"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/cell_text_color"
                        android:textSize="17dp"
                        />

                    <RadioGroup
                        android:id="@+id/radio_group_light_working"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="30dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_radio_light_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes" />

                        <RadioButton
                            android:id="@+id/btn_radio_light_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />


                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="05sp"
                android:background="#6199CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/txv_no_of_shelves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No of Shelves:"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/cell_text_color"
                        android:textSize="17dp"
                        />
                    <RadioGroup
                        android:id="@+id/radio_group_no_of_shelves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="30dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_radio_six"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="06" />

                        <RadioButton
                            android:id="@+id/btn_radio_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="05" />

                        <RadioButton
                            android:id="@+id/btn_radio_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="04" />
                        <RadioButton
                            android:id="@+id/btn_radio_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="03" />
                        <RadioButton
                            android:id="@+id/btn_radio_others"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Others" />

                    </RadioGroup>
                    <LinearLayout
                        android:id="@+id/linear_type_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type Other Value:"
                            android:layout_marginLeft="10dp"
                            />
                        <EditText
                            android:id="@+id/edt_type_other_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:singleLine="true"
                            />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="05sp"
                android:background="#6199CA" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/txv_cleanliness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cleanliness:"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="02dp"
                        android:textSize="17dp"
                        android:textColor="@color/cell_text_color"
                        />
                    <RadioGroup
                        android:id="@+id/radio_group_cleanless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="30dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_cooler_cleanliness_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes" />

                        <RadioButton
                            android:id="@+id/btn_cooler_cleanliness_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />


                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="05sp"
                android:background="#6199CA" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/txv_cooler_prime_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooler in Prime Position:"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="1dp"
                        android:textSize="17dp"
                        android:textColor="@color/cell_text_color"
                        />
                    <RadioGroup
                        android:id="@+id/radio_group_cooler_in_prime_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="30dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_cooler_cooler_prime_postion_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes" />

                        <RadioButton
                            android:id="@+id/btn_cooler_cooler_prime_postion_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No" />


                    </RadioGroup>

                </LinearLayout>
                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--&gt;-->
                <!---->
                <!--</LinearLayout>-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    >
                    <Button
                        android:id="@+id/vis_btn_back"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:theme="@style/Facebook.Button"
                        android:text="Back"
                        android:layout_marginLeft="20dp"


                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_visi_cooler_update"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        android:text="Update"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:theme="@style/Facebook.Button" />
                    <Button
                        android:id="@+id/visi_btn_next"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:theme="@style/Facebook.Button"
                        android:text="Next"

                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
