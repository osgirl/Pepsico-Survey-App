<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="limited.it.planet.visicoolertracking.activities.CoolerStatusActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_color_status"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

            <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--&gt;-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Cooler Status"-->
                    <!--android:textSize="25dp"-->

                    <!--/>-->

            <!--</LinearLayout>-->


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/txv_channel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Channel:"
                        android:layout_marginLeft="20dp"
                        android:textSize="17dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/cell_text_color"
                        />
                    <RadioGroup
                        android:id="@+id/radio_group_channel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_radio_grocery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Grocery" />

                        <RadioButton
                            android:id="@+id/btn_radio_restaurent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Restaurant" />


                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="05dp"
                android:background="#6199CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/txv_cooler_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooler Status:"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/cell_text_color"
                        android:textSize="17dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_pepsico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PepsiCo"
                        android:layout_marginLeft="30dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_cocacola"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CocaCola"
                        android:layout_marginLeft="30dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_pran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pran"
                        android:layout_marginLeft="30dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_mojo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mojo"
                        android:layout_marginLeft="30dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_others"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:layout_marginLeft="30dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="05sp"
                android:background="#6199CA"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/check_pepsico_layout"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                        <TextView
                            android:id="@+id/txv_cooler_purity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cooler Purity:"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/cell_text_color"
                            android:textSize="17dp"
                            />
                        <RadioGroup
                            android:id="@+id/radio_group_cooler_purity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="30dp"
                            >

                            <RadioButton
                                android:id="@+id/btn_purity_radio_yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Yes" />

                            <RadioButton
                                android:id="@+id/btn_purity_radio_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="No" />


                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="05sp"
                    android:background="#6199CA"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                        <TextView
                            android:id="@+id/txv_cooler_charging"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cooler Charging:"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:textSize="17dp"
                            android:textColor="@color/cell_text_color"
                            />
                        <RadioGroup
                            android:id="@+id/radio_group_cooler_charging"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="30dp"
                            >

                            <RadioButton
                                android:id="@+id/btn_cooler_charging_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="60-100%" />

                            <RadioButton
                                android:id="@+id/btn_cooler_charging_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Below 60%" />


                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_back"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        android:layout_marginLeft="35dp"
                        android:text="Back"

                        android:theme="@style/Facebook.Button"

                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_update"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:textSize="12dp"
                            android:layout_marginLeft="115dp"
                            android:text="Update"

                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:theme="@style/Facebook.Button" />
                        <Button
                            android:id="@+id/btn_next"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:textSize="12dp"
                            android:text="Next"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:theme="@style/Facebook.Button"

                            />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
